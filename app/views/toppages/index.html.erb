<% if logged_in? %>
    <div class="col-xs-8 mt-2">
      <%= render 'tasks/index' %>
    </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Task List</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-outline-primary' %>
    </div>
  </div>
<% end %>