<div class="row">
  <aside class="col-4 mt-2">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="media-object rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
    </div>
  </aside>
  <div class="col-8 mt-2">
    <ul class="nav nav-tabs nav-justified">
      <li class="nav-item nav-link <%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>Task <span class="badge badge-pill badge-primary"><%= @count_tasks %></span><% end %></li>
      <li class="nav-item"><a class="nav-link" href="#">Followings</a></li>
      <li class="nav-item"><a class="nav-link" href="#">Followers</a></li>
    </ul>
    <div class="mt-3">
      <%= render 'tasks/index'%>
    </div>
  </div>
</div>